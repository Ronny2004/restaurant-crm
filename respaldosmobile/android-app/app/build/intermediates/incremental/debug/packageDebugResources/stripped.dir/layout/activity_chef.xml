<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvChefTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANEL DE COCINA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E65100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvChefStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã“rdenes Pendientes"
        android:textSize="14sp"
        android:textColor="#EF6C00"
        app:layout_constraintTop_toBottomOf="@id/tvChefTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvChefStatus"
        app:layout_constraintBottom_toTopOf="@id/btnLogoutChef"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Button
        android:id="@+id/btnLogoutChef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR DE COCINA"
        android:backgroundTint="#F57C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>